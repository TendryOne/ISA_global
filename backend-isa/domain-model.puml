  - name : String
  - firstName : String
  - email : String
  - address : String
  - phone : String
  - gender : String
  - role : String
}

class Student {
  - inscriptionId : String
  - identityPhoto : String
  - birthDate : Date
  - birthPlace : String
  - cin : String
  - emergencyContactName : String
  - emergencyContactRelation : String
  - emergencyContactPhone : String
  - bacSeries : String
  - bacYear : Number
  - previousInstitution : String
  - field : String
  - level : String
  - promotionYear : Number
  - verified : Boolean
